<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".afragments.BlacksmithFragment"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Health: 100"
            android:id="@+id/tv_player_health"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/healthColor"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_player_stamina"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/staminaColor"
            android:text="Stamina: 100"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout3">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Armor: 300"
            android:id="@+id/tv_player_armor"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/armorColor"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Attack: 1200"
            android:id="@+id/tv_player_attack"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/attackColor"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gold: 950"
            android:id="@+id/tv_player_gold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/goldColor"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_toEndOf="@+id/fragment_chapter1"
        android:layout_toRightOf="@+id/fragment_chapter1"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Days: 400"
            android:id="@+id/tv_player_days_left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Leagues: 10000"
            android:id="@+id/tv_player_leagues_left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_blacksmith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_above="@+id/button_layout">
    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:text="Weapons"
        android:id="@+id/button_weapons"
        android:background="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:text="Armor"
        android:id="@+id/button_armor"
        android:background="#000000" />

    </LinearLayout>

</RelativeLayout>
