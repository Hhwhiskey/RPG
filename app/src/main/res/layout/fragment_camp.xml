<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp">


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Blacksmith"
            android:layout_weight=".5"
            android:textSize="20dp"
            android:typeface="serif"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:id="@+id/button_goto_blacksmith" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Alchemist"
            android:layout_weight=".5"
            android:textSize="20dp"
            android:typeface="serif"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:id="@+id/button_goto_alchemist" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout2"
        android:layout_centerHorizontal="true">


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Soothsayer"
            android:layout_weight=".5"
            android:textSize="20dp"
            android:typeface="serif"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:id="@+id/button_goto_soothsayer" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Travel"
            android:layout_weight=".5"
            android:textSize="20dp"
            android:typeface="serif"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:id="@+id/button_travel_from_camp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camp"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/PrimaryFont"
        android:textSize="30dp" />

</RelativeLayout>


